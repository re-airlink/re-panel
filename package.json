{
  "name": "airlink-panel",
  "version": "1.0.0",
  "description": "Airlink is a simple-to-use game server management panel",
  "main": "dist/app.js",
  "keywords": [
    "game server",
    "management",
    "panel"
  ],
  "author": "AirlinkLabs",
  "license": "MIT",
  "scripts": {
    "build:css": "tailwindcss -i src/public/styles.css -o dist/public/styles.css",
    "watch:css": "tailwindcss -i src/public/styles.css -o dist/public/styles.css --watch",
    "build": "ts-node ./src/cmd/build.ts",
    "build:views": "ts-node ./src/cmd/buildViews.ts",
    "start": "node dist/app.js",
    "clean": "ts-node ./src/cmd/clean.ts",
    "start:dev": "nodemon",
    "format": "prettier --write src/",
    "migrate:dev": "npx prisma migrate dev --name init && npx prisma generate",
    "migrate:deploy": "npx prisma migrate deploy && npx prisma generate",
    "test": "jest --forceExit",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.6",
    "@types/supertest": "^6.0.2",
    "copyfiles": "^2.4.1",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "concurrently": "^9.0.1",
    "chokidar": "^4.0.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "winston": "^3.16.0",
    "@prisma/client": "^5.21.1"
  }
}
